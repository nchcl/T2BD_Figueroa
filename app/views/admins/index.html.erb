<h1>Admins de la seccion</h1>

<table>
  <thead>
    <tr>
      <th>Nombre admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.admin_name %></td>
        <% if session[:user_id] == Admin.where("section_id = ?", @section.id).first.user_id and
        Admin.where("section_id = ?", @section.id).first.user_id != admin.user_id%>
          <td><%= link_to 'Quitar admin',  [@section, admin], method: :delete, data: { confirm: 'Seguro?'  } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<td><%= link_to 'Volver', section_path(@section) %></td>
