<h1>Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre de Usuario</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Ver', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Usuario', new_user_path %> |
<%= link_to 'Volver', "/" %>
