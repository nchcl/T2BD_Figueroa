<%= form_with model: @section, local: true do |form| %>

  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@section.errors.count, "error") %> prohibited
        this section from being saved:
      </h2>
      <ul>
        <% @section.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :user_id, value: @section.user.id %>
  </div>

  <div class="field">
