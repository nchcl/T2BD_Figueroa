<h1>Secciones</h1>

<% if current_user %>
  <%= link_to 'Nueva seccion', new_section_path %>
<% else %>
  <p>Necesitas estar logeado para crear y ver secciones</p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Seccion |</th>
      <th>Fecha de creacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.section_name %></td>
        <td><%= section.created_date %></td>
        <% if current_user != nil%>
          <td><%= link_to 'Ver', section %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Volver', "/" %>
